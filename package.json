{
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "dev": "yarn run clean:generated && vite-ssr --port 4444 --host",
    "dev:spa": "yarn run clean:generated && vite --port 4444 --host",
    "start": "yarn run clean && yarn run build && yarn run server",
    "buildproduction": "vite build",
    "build": "cross-env NODE_ENV=prod vite-ssr build",
    "buildprod": "cross-env NODE_ENV=prod  --outDir /dist/ build",
    "build:client": "vite build --outDir dist/_app/client",
    "build:server": "vite build --outDir dist/_app/server --ssr _app/server/main.js ",
    "preview": "vite preview --host",
    "server": "cross-env NODE_ENV=production node ./_app/server/main.js",
    "clean": "rimraf _app/dist",
    "clean:generated": "rimraf src/auto-imports.d.ts && rimraf src/components.d.ts",
    "fix": "yarn fix:eslint && yarn fix:prettier && yarn fix:stylelint",
    "fix:eslint": "eslint **/*.{js,ts,vue} --fix",
    "fix:prettier": "prettier --write **/*.{vue,js,ts,css,sass,scss}",
    "fix:stylelint": "stylelint --fix **/*.{vue,css,sass,scss} --ignore-path"
  },
  "dependencies": {
    "@nuxt/devalue": "^2.0.0",
    "@popperjs/core": "^2.10.2",
    "@vueuse/core": "^7.3.0",
    "@vueuse/head": "^0.7.4",
    "axios": "^0.24.0",
    "firebase-tools": "^10.5.0",
    "global": "^4.4.0",
    "highcharts": "^9.3.2",
    "highcharts-vue": "^1.4.0",
    "lodash": "^4.17.21",
    "mitt": "^3.0.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.8",
    "portal-vue": "^2.1.7",
    "swiper": "^6.8.4",
    "v-calendar": "^3.0.0-alpha.6",
    "v-tooltip": "^2.1.3",
    "vite-ssr": "^0.14.3",
    "vite-ssr-middleware": "^0.2.1",
    "vue": "^3.2.26",
    "vue-chartjs": "^3.5.1",
    "vue-color-kit": "^1.0.5",
    "vue-demi": "^0.12.1",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.12",
    "vue3-highcharts": "^0.1.3",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@intlify/vite-plugin-vue-i18n": "^3.2.1",
    "@prettier/plugin-pug": "^1.18.0",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.179",
    "@types/node": "^15.3.0",
    "@types/node-fetch": "^2.5.12",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@vitejs/plugin-vue": "^1.10.2",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@windicss/plugin-scrollbar": "^1.2.3",
    "critters": "^0.0.15",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.4",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.45.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.0.1",
    "typescript": "^4.5.4",
    "unplugin-auto-import": "^0.5.3",
    "unplugin-vue-components": "^0.17.9",
    "vite": "^2.7.3",
    "vite-plugin-windicss": "^1.6.1",
    "vite-ssg": "^0.17.1",
    "vue-tsc": "^0.29.8",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "pre-push": "lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": "eslint --fix",
    "*.{vue,js,ts,jsx,tsx,css,sass,scss}": "prettier --write",
    "*.{vue,css,sass,scss}": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  }
}
